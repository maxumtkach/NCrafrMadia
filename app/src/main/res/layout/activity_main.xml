<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:layout_margin="16dp"
        tools:context=".MainActivity"
        android:id="@+id/constraintLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#FAFAFA"
            android:padding="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/android_image"
                android:layout_width="wrap_content"
                android:paddingRight="24dp"
                app:layout_goneMarginBottom="24dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_android_black_24dp"
                app:layout_constraintStart_toEndOf="@+id/data"
                app:layout_constraintBottom_toTopOf="@+id/post"
                android:layout_marginBottom="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                tools:text="First post in our network! "
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/data"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/btn_image_like"
                android:layout_marginBottom="24dp"
        />

        <TextView
                tools:text="Netology "
                android:id="@+id/netology_text"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/android_image"
                app:layout_constraintTop_toBottomOf="@+id/data"
                android:layout_marginEnd="24dp"
        />

        <TextView
                android:id="@+id/data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20 august  2019"
                android:textSize="10sp"
                android:textColor="#999999"
                app:layout_constraintStart_toEndOf="@+id/android_image"
                app:layout_constraintTop_toTopOf="parent"
        />

        <ImageButton
                android:src="@drawable/ic_favorite_24dp"
                android:background="@android:color/transparent"
                android:id="@+id/btn_image_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/post"
                android:layout_marginTop="24dp"
                app:layout_constraintEnd_toStartOf="@+id/text_like" android:layout_marginEnd="8dp"/>

        <TextView
                android:id="@+id/text_like"
                tools:text="0"
                app:layout_constraintLeft_toRightOf="@+id/btn_image_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_image_wapp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/post"/>

        <ImageButton
                android:src="@drawable/ic_chat_bubble_black_24dp"
                android:background="@android:color/transparent"
                android:id="@+id/btn_image_wapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/post"
                app:layout_constraintLeft_toLeftOf="@+id/text_like"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="32dp"
                app:layout_constraintEnd_toStartOf="@+id/text_wapp"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:id="@+id/text_wapp"
                tools:text="0"
                app:layout_constraintLeft_toRightOf="@+id/btn_image_wapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/post"
                app:layout_constraintEnd_toStartOf="@+id/btn_image_set"
                android:layout_marginEnd="32dp"/>

        <ImageButton
                android:src="@drawable/ic_share_black_24dp"
                android:background="@android:color/transparent"
                android:id="@+id/btn_image_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/post"
                app:layout_constraintLeft_toRightOf="@+id/text_wapp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="32dp"
                app:layout_constraintEnd_toStartOf="@+id/text_set"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:id="@+id/text_set"
                tools:text="0"
                app:layout_constraintLeft_toRightOf="@+id/btn_image_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/post"
                app:layout_constraintEnd_toEndOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>